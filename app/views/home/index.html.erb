<section id="warehouses">
  <h2>Galpões</h2>
  <%= I18n.translate('hello')%>
  <p>
    <%= I18n.localize(Date.today) %>
  </p>
  <div>
    <%= link_to('Cadastrar Galpão', new_warehouse_path)%>
  </div>
  <% @warehouses.each do |w| %>
    <div>
      <h3><%= link_to(w.name, warehouse_path(id: w.id)) %></h3>
      <dl>
        <dt>Código:</dt>
        <dd><%= w.code %></dd>
        <dt>Cidade:</dt>
        <dd><%= w.city %></dt>
        <dt>Área:</dt>
        <dd><%= "#{w.area} m²" %></dd>
      </dl>
    </div>
  <%end%>


  <% if @warehouses.empty? %>
    <p>Não existem galpões cadastrados</p>
  <%end%>
</section>